<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.CurrentWeatherFragment"
    android:padding="10dp"
    android:background="@drawable/bg_color">

   <!-- <ProgressBar
    android:id="@+id/loading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:indeterminate="true"/> -->

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.5">

    <TextView
        android:id="@+id/temparature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="39 \u2103"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:fontFamily="monospace"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11/01/2019"
        android:textSize="30sp"
        android:textColor="#000"
        android:maxLines="2"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/temparature"/>

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friday"
        android:textSize="30sp"
        android:textColor="#000"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/date"/>

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dhaka"
        android:textSize="30sp"
        android:textColor="#000"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/day"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:padding="10dp">
        <ImageView
            android:id="@+id/image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_cloud" />

        <TextView
            android:id="@+id/main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunny"
            android:textSize="30sp"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:layout_below="@id/image"/>
    </RelativeLayout>

</RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:layout_marginBottom="10dp">

    <LinearLayout
        android:id="@+id/minmaxTV"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_gradient"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="17\u2103"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="25sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Max"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="37\u2103"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="25sp" />
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/temparature"
           />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sunrisesunsetTV"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_gradient"
        android:orientation="vertical"
        android:layout_marginRight="10dp">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunrise"
        android:textColor="#000"
        android:layout_gravity="center"
        android:textSize="25sp" />
        <TextView
            android:id="@+id/sunrise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6:45 AM"
            android:textColor="#000"
            android:layout_gravity="center"
            android:textSize="25sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunset"
            android:textColor="#000"
            android:layout_gravity="center"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/sunset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5:25 PM"
            android:textColor="#000"
            android:layout_gravity="center"
            android:textSize="25sp" />
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/sun"
            android:layout_gravity="center"/>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/humiditypressureTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_gradient"
            android:orientation="vertical">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Humidity"
            android:textColor="#000"
            android:textSize="25sp" />
            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="86%"
                android:textColor="#000"
                android:textSize="25sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Pressue"
                android:textColor="#000"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1021.hp"
                android:textColor="#000"
                android:textSize="25sp" />
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/humidity"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>